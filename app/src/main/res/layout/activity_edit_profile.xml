<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">


    <!--<Toolbar>-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBtn_EditProfile"
            android:layout_width="52dp"
            android:layout_height="38dp"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtEditProfileToolBar"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/txtEditProfileToolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:fontFamily="@font/baloo2"
            android:text="@string/edit_profile"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/backBtn_EditProfile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    <Guideline>-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <!--ScrollView-->
    <ScrollView
        android:id="@+id/editProfileScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline">
        <!--    ScrollView LinearLayout Start    -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="vertical">

            <!--Profile Picture Start-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                    android:layout_width="212dp"
                    android:layout_height="214dp"
                    android:contentDescription="@string/profile_bg"
                    android:rotation="45"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_bg" />

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="80dp">

                    <ImageView
                        android:id="@+id/dp_EditProfile"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:contentDescription="@string/profile_pic"
                        android:scaleType="fitXY"
                        android:src="@drawable/profilepic" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/select_dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="140dp"
                    android:contentDescription="@string/select_dp"
                    android:elevation="2dp"
                    android:src="@drawable/update_photo_new" />
            </RelativeLayout>
            <!--Profile Picture End-->
            <!--Form Start-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--Name Start-->
                <TextView
                    android:id="@+id/name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:drawableStartCompat="@drawable/ic_baseline_person_24" />

                <EditText
                    android:id="@+id/name_edt_EditProfile"
                    style="@style/editProfileEditTextViews"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:autofillHints="username"
                    android:hint="@string/enter_your_full_name"
                    android:inputType="text" />
                <!--Name End-->
                <!--Gender Start-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gender_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/gender_male_icon_EditProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gender_male_select"
                            android:elevation="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/gender_male_selected" />

                        <ImageView
                            android:id="@+id/gender_female_icon_EditProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gender_female_select"
                            android:elevation="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/gender_female" />
                    </RadioGroup>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--Gender End-->
                <!--Age Start-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/age_icon"
                        android:scaleType="centerInside"
                        android:src="@drawable/age_icon" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/age_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/age"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/age_edt_EditProfile"
                            style="@style/editProfileEditTextViews"
                            android:autofillHints="username"
                            android:hint="@string/enter_your_age"
                            android:inputType="text" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--Age End-->
                <!--Email Start-->
                <TextView
                    android:id="@+id/email_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:drawableStartCompat="@drawable/ic_baseline_email_24" />

                <EditText
                    android:id="@+id/email_edt_EditProfile"
                    style="@style/editProfileEditTextViews"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:autofillHints="emailAddress"
                    android:hint="@string/enter_your_email"
                    android:inputType="textEmailAddress" />
                <!--Email End-->
                <!--Phone Start-->
                <TextView
                    android:id="@+id/phone_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/phone_no"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:drawableStartCompat="@drawable/ic_baseline_local_phone_24" />

                <EditText
                    android:id="@+id/phone_edt_EditProfile"
                    style="@style/editProfileEditTextViews"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:autofillHints="phone"
                    android:hint="@string/enter_your_phone_number"
                    android:inputType="phone" />
                <!--Phone End-->
                <!--Location Start-->
                <TextView
                    android:id="@+id/location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />

                <EditText
                    android:id="@+id/location_edt_EditProfile"
                    style="@style/editProfileEditTextViews"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:autofillHints="location"
                    android:hint="@string/enter_your_location"
                    android:inputType="text" />
                <!--Location End-->
                <!--Plan Start-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/age_icon"
                        android:scaleType="centerInside"
                        android:src="@drawable/plan_icon" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/plan_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/plan"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/plan_edt_EditProfile"
                            style="@style/editProfileEditTextViews"
                            android:autofillHints="plan"
                            android:hint="@string/enter_your_plan"
                            android:inputType="text" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--Plan End-->
                <!--Height Start-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/height_icon"
                        android:scaleType="centerInside"
                        android:src="@drawable/height_icon" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/height_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/height"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/height_edt_EditProfile"
                            style="@style/editProfileEditTextViews"
                            android:autofillHints="Height"
                            android:hint="@string/enter_your_height"
                            android:inputType="number" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--Height End-->
                <!--Weight Start-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/weight_icon"
                        android:scaleType="centerInside"
                        android:src="@drawable/weight_icon" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/weight_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/weight_edt_EditProfile"
                            style="@style/editProfileEditTextViews"
                            android:autofillHints="Weight"
                            android:hint="@string/enter_your_weight"
                            android:inputType="number" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--Weight End-->
                <!--About Start-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/about_icon"
                        android:scaleType="centerInside"
                        android:src="@drawable/about_icon" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/about_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/about_edt_EditProfile"
                            style="@style/editProfileEditTextViews"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:autofillHints="About"
                            android:inputType="textLongMessage"
                            android:textAlignment="textStart" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--About End-->
                <Button
                    android:id="@+id/button_save_EditProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:backgroundTint="#3D95FF"
                    android:fontFamily="@font/nats_regular"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="10dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--Edit Form End-->
        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--ScrollView LinearLayout End-->
    </ScrollView>
    <!--ScrollView LinearLayout End-->
</androidx.constraintlayout.widget.ConstraintLayout>